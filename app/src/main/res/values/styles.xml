<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="botao_pronto">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">145dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">142dp</item>
        <item name="android:layout_marginBottom">52dp</item>
        <item name="android:background">@color/vermelho</item>
     </style>
    <style name="check_box">
        <item name="android:background">@color/branco</item>
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_genero_ano">
        <item name="android:background">@color/preto</item>
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="tela_favoritos">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
